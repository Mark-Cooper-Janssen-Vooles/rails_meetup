<%= render 'navbar' %>

<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Comment Title</th>
      <th>Comment text</th>
      <th>Event</th>
      <th>Date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.title %></td>
        <td><%= comment.comment_text %></td>
        <td><%= comment.event.name %></td>
        <td><%= comment.date %></td>
        <td><%= comment.user.name %></td>
        <td><%= link_to 'Show', group_event_comments_path %></td>
        <td><%= link_to 'Edit', edit_group_event_comment_path(@group.id, @event.id, comment) %></td>
        <td><%= link_to 'Destroy', group_event_comment_path(@group.id, @event.id, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_group_event_comment_path %>
